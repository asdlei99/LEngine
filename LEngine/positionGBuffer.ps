struct PixelInputType
{
    float4 positionSV : SV_POSITION;
    float4 position : TEXCOORD0;
};

////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
float4 ColorPixelShader(PixelInputType input) : SV_TARGET
{
	return float4(input.position.x, input.position.y, input.position.z, 1.0);
}